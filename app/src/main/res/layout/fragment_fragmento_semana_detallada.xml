<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSubs">

        <TextView
            android:id="@+id/txtSemanaExpandida"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/marginlista"
            android:layout_marginStart="@dimen/marginlista"
            android:gravity="center_vertical"
            android:text="@string/semana1"
            android:textColor="@color/blanco"
            android:textSize="@dimen/detalle_semana_txt"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_weight=".1"
            android:layout_width="0dp"
            android:text="@string/simbolo_dinero"
            android:gravity="center"
            android:textColor="@color/blanco"
            android:textSize="@dimen/detalle_semana_txt"
            android:layout_height="match_parent">

        </TextView>

        <EditText
            android:id="@+id/editCantidadExpandida"
            android:layout_weight=".8"
            android:textSize="24sp"
            android:inputType="numberDecimal"
            android:textColor="@color/blanco"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </EditText>

    </LinearLayout>

</LinearLayout>